<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <services>
    <service class="CubicMushroom\Symfony\StripeBundle\Form\Extension\GlobalsExtension" id="cubic_mushroom_symfony_stripe.form_extension.globals_extension">
      <argument type="string">%cm_stripe.api_public_key%</argument>
      <call method="initRuntime">
        <argument id="twig" type="service"/>
      </call>
      <tag name="twig.extension"/>
    </service>

  </services>
</container>