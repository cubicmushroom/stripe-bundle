<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <services>
    <service id="cm_stripe.repository.payment"
             class="CubicMushroom\Symfony\StripeBundle\Repository\Payment\PaymentRepository"
             factory-class="Doctrine\ORM\EntityManager"
             factory-method="getRepository">
      <argument>CubicMushroom\Payments\Stripe\Domain\Payment\Payment</argument>
    </service>

  </services>
</container>